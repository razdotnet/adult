<div class="spacing"></div>
<div class="row">
  <div class="register-container">
    <h4 class="register-title text-center">
      
    </h4>
    <p class="sign-up-text text-center">
      sign up boilerplate text.sign up boilerplate text.sign up boilerplate text.sign up boilerplate text.sign up boilerplate text.sign up boilerplate text.sign up boilerplate text.sign up boilerplate text.
    </p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="large-12 columns">

        <div class="large-6 columns">
          <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'form' %>

         <%= f.password_field :password, autocomplete: "off", class: 'form', placeholder: 'password' %>

        </div>

        <div class="large-6 columns">
          <%= f.text_field :username, placeholder: 'username', class: 'form' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form', placeholder: 'confirm password' %>
        </div>
        </div>

        <div class="large-12 columns text-center">
          <%= f.submit 'lol', class: 'form-submit' %>
        </div>
      <% end %>
  </div>
</div>